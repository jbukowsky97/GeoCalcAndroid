<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cis.gvsu.edu.geocalculator.MainActivity">

    <EditText
        android:id="@+id/p1Lat"
        style="@style/GeoCalcText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter latitude for p1"
        android:inputType="numberSigned|numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/p1Lng"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/p2Lat"
        style="@style/GeoCalcText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter latitude for p2"
        android:inputType="numberSigned|numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/p1Lat"
        app:layout_constraintRight_toLeftOf="@+id/p2Lng"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:text="Calculate"
        style="@style/GeoCalcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calc"
        app:layout_constraintLeft_toLeftOf="@+id/p2Lat"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/p2Lat" />

    <Button
        android:text="Clear"
        style="@style/GeoCalcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        app:layout_constraintRight_toRightOf="@+id/p2Lng"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/p2Lng" />

    <TextView
        android:text="Bearing:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/bearing"
        app:layout_constraintLeft_toLeftOf="@+id/p1Lat"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/distance"
        app:layout_constraintRight_toRightOf="@+id/p1Lng" />

    <EditText
        android:id="@+id/p1Lng"
        style="@style/GeoCalcText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter longitude for p1"
        android:inputType="numberSigned|numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/p1Lat"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <EditText
        android:id="@+id/p2Lng"
        style="@style/GeoCalcText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter longitude for p2"
        android:inputType="numberSigned|numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Lng"
        app:layout_constraintLeft_toRightOf="@+id/p2Lat"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="Distance:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        app:layout_constraintLeft_toLeftOf="@+id/p1Lat"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calc"
        app:layout_constraintRight_toRightOf="@+id/p1Lng" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tired of Typing?"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintRight_toLeftOf="@+id/search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <Button
        android:id="@+id/search"
        style="@style/GeoCalcButton"
        android:layout_width="80dp"
        android:layout_height="17dp"
        android:text="SEARCH"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>
